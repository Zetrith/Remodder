<idea-plugin require-restart="true">
  <id>com.zetrith.remodder</id>
  <name>Remodder</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/Zetrith/Remodder">Zetrith</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <description>Quality-of-life tools for modders of .NET games, especially those using Harmony</description>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow factoryClass="com.jetbrains.rider.plugins.remodder.RemodderToolWindowFactory" id="Remodder"/>
  </extensions>

</idea-plugin>
